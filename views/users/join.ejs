<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>DIDI</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/event-source-polyfill/src/eventsource.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/pages/join.css">
</head>
<script type="text/javascript">
  window.history.forward();
  function noBack(){window.history.forward();} // 이 페이지로의 뒤로가기 차단
</script>
<body onload="noBack();" onpageshow="if(event.persisted) noBack();" onunload="">
<div class="cont">
    <div class="container right-panel-active">
        <!-- Sign Up -->
        <div class="container__form container--signup">
            <form class="form" method="post" action="/users/join" >
              <h2 class="form__title">회원가입</h2>
              <div id="signup-form" style="width: 100%;">
                <div class="row" style="width: 100%;">
                  <div class="col-md-12 p-0">
                    <input type="text" placeholder="User" class="input" id="name" name="name" required />
                  </div>
                </div>
                <div class="row" style="width: 100%;">
                  <div class="col-md-12 p-0">
                    <input type="email" placeholder="Email" class="input" id="email" name="email" required/>
                  </div>
                  <div class="p-0 email-validation" id="email-validation"></div>
                </div>
                <div class="row" style="width: 100%;">
                  <div class="col-md-12 p-0">
                    <input type="password" placeholder="password" class="input" id="password" name="password" required />
                  </div>
                </div>
                <div class="row" style="width: 100%;">
                  <button class="join_btn col-md-6" type="submit" >회원가입</button>
                <button class="join_btn col-md-6" type="button" id="btn_look_around">둘러보기</button>
                </div>
              </div>
              <div class="row" style="width:100%; display: flex; justify-content: center; align-items: center;" id="signup-qr"></div>
              <div class="row" style="width:100%; display: flex; justify-content: center; align-items: center;" id="signup-url"></div>
            </form>
        </div>
      
        <!-- Sign In -->
        <div class="container__form container--signin">
          <form action="/users/login" method="post" class="form" >
            <h2 class="form__title">로그인</h2>
            <input type="email" placeholder="Email" name="email" class="input" />
            <input type="password" placeholder="Password" name="password" class="input" />
            <a href="#" class="link">Forgot your password?</a>
            <button class="join_btn" type="submit">로그인</button>
          </form>
        </div>
      
        <!-- Overlay -->
        <div class="container__overlay">
          <div class="overlay">
            <div class="overlay__panel overlay--left">
              <button class="join_btn" id="signIn">로그인</button>
            </div>
            <div class="overlay__panel overlay--right">
              <button class="join_btn" id="signUp">회원가입</button>
            </div>
          </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/scripts/join.js"></script>
<%- include('../partials/footer') %>