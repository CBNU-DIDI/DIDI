<%- include('../partials/header') %>

<div class="col-md-12 text-center">
    <h3 class="mt-3 ">투표방 목록</h3>
    <div class="row">
            <% const itemsPerPage = 9;%>
            <% const pageCount = 5  %>
            <% for (let page = 0; page < pageCount; page++) { %>
                <div class="justify-content-center page <%= page === 0 ? 'active' : '' %> ">
                    <div class="row">
                        <% for (let i = page * itemsPerPage; i < Math.min((page + 1) * itemsPerPage, 45); i++) { %>
                            <div class="col-md-4">
                                <div class="card card-margin my-3" style="width: 24rem;">
                                    <img src="/imgs/vote3.jpg" class="card-img-top" alt="/imgs/vote3.jpg">
                                    <div class="card-body">
                                      <h5 class="card-title">Card title</h5>
                                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                      <li class="list-group-item">An item</li>
                                      <li class="list-group-item">A second item</li>
                                      <li class="list-group-item">A third item</li>
                                    </ul>
                                    <div class="card-body">
                                      <a href="#" class="card-link">Card link</a>
                                      <a href="#" class="card-link">Another link</a>
                                    </div>
                                  </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
    </div>
    <nav aria-label="Page navigation" class="text-center">
        <ul class="pagination justify-content-center"> 
            <% for (let i = 0; i < pageCount; i++) { %>
                <li class="page-item <%= i === 0 ? 'active' : '' %>"><a class="page-link text-center" href="#"><%= i + 1 %></a></li> <!-- text-center 클래스 추가 -->
            <% } %>
        </ul>
    </nav>
</div>
<script src="/scripts/roomList.js"></script>
<%- include('../partials/footer') %>